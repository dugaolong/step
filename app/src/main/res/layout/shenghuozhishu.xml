                android:padding="10dp"
                android:layout_below="@id/type6"
                android:layout_alignRight="@id/type6"
                android:id="@+id/desc6"
                android:text="gggggg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>