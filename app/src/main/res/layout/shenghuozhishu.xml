<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="生活指数"
            android:id="@+id/shenghuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/shenghuo"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0.05dp" />
    </RelativeLayout>

    <!--穿衣信息
uv：紫外线建议 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:background="@drawable/stroke_bottom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/chuanyi"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type1"
                android:text="穿衣"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:layout_below="@id/type1"
                android:layout_alignRight="@id/type1"
                android:id="@+id/desc1"
                android:text="穿衣"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/stroke_bottom"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ziwaixian"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type2"
                android:text="紫外线"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:layout_below="@id/type2"
                android:layout_alignRight="@id/type2"
                android:id="@+id/desc2"
                android:text="紫外线"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <!--
car_washing：洗车信息
travel：旅游信息
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:background="@drawable/stroke_bottom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/xiche"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type3"
                android:text="洗车"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:layout_below="@id/type3"
                android:layout_alignRight="@id/type3"
                android:id="@+id/desc3"
                android:text="sssss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/stroke_bottom"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/lvyou"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type4"
                android:text="旅游"
                android:layout_width="wrap_content"
