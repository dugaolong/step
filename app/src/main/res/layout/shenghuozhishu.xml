                android:padding="10dp"
                android:layout_below="@id/type4"
                android:layout_alignRight="@id/type4"
                android:id="@+id/desc4"
                android:text="dddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <!--
flu：流感信息
sport：运动信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:background="@drawable/stroke_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ganmao"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type5"
                android:text="感冒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:layout_below="@id/type5"
                android:layout_alignRight="@id/type5"
                android:id="@+id/desc5"
                android:text="ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/yundong"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:id="@+id/type6"
                android:text="运动"
                android:layout_width="wrap_content"
